<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.personal.chatapp.ProfileActivity"
    android:background="#808080">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="42dp"
        app:srcCompat="@drawable/calendar" />

    <TextView
        android:id="@+id/profile_displayName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profile_image"
        android:layout_marginTop="58dp"
        android:text="Display Name"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/profile_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profile_displayName"
        android:layout_marginTop="23dp"
        android:text="User Status"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/profile_totalFriends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profile_send_reg_btn"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:text="Total Friends"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/profile_send_reg_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profile_decline_btn"
        android:layout_alignStart="@+id/profile_decline_btn"
        android:layout_marginBottom="17dp"
        android:background="@color/colorAccent"
        android:text="Send Friend Request"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/profile_decline_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="12dp"
        android:background="#ffffff"
        android:text="Decline Friend Request"
        android:textColor="@color/colorPrimaryDark" />

</RelativeLayout>
